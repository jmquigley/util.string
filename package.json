{
	"name": "util.string",
	"version": "0.0.26",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "Library of string helper functions",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.string"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.string/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"main": "./index.umd.min.js",
	"module": "./index.es.min.js",
	"types": "./index.d.ts",
	"files": [
		"index.*.min.js",
		"index.d.ts"
	],
	"devDependencies": {
		"@babel/cli": "^7.4.3",
		"@babel/core": "^7.4.3",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-proposal-decorators": "^7.4.0",
		"@babel/plugin-transform-modules-commonjs": "^7.4.3",
		"@babel/plugin-transform-runtime": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/runtime": "^7.4.3",
		"@types/jest": "^24.0.11",
		"@types/node": "^11.13.4",
		"babel-loader": "^8.0.5",
		"babel-minify": "^0.5.0",
		"babel-preset-minify": "^0.5.0",
		"coveralls": "^3.0.3",
		"debug": "^4.1.1",
		"jest": "^24.7.1",
		"prettier": "^1.17.0",
		"tslint": "^5.15.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.4.3",
		"util.pkgwrap": "^0.0.112",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.0"
	},
	"pkgwrap": {
		"cleanup": [
			"docs/",
			"tsconfig.tsbuildinfo"
		]
	},
	"scripts": {
		"all": "yarn install && NODE_ENV=production yarn build && yarn docs && yarn test && yarn manifest",
		"build": "yarn lint && yarn prettier && yarn build:umd && yarn build:es && yarn build:cjs",
		"build:cjs": "babel index.ts --sourceType module --out-file index.cjs.min.js",
		"build:es": "minify index.js --sourceType module --out-file index.es.min.js",
		"build:umd": "pkgwrap --build --webpack",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"coverage": "pkgwrap --coverage --jest",
		"docs": "pkgwrap --docs",
		"lint": "pkgwrap --lint",
		"manifest": "npm pack --dry-run",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,yaml,yml,css}\"",
		"test": "jest"
	}
}
