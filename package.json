{
	"name": "util.string",
	"version": "0.0.23",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "Library of string helper functions",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.string"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.string/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"main": "./index.umd.min.js",
	"module": "./index.es.min.js",
	"types": "./index.d.ts",
	"files": [
		"index.*.min.js",
		"index.d.ts"
	],
	"dependencies": {
		"util.constants": "^0.0.26",
		"xregexp": "^4.2.4"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.4.0",
		"@babel/plugin-transform-modules-umd": "^7.2.0",
		"@babel/preset-env": "^7.4.2",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/runtime": "^7.4.2",
		"@types/jest": "^24.0.11",
		"@types/node": "^11.11.7",
		"@types/xregexp": "^3.0.29",
		"babel-minify": "^0.5.0",
		"babel-preset-minify": "^0.5.0",
		"coveralls": "^3.0.3",
		"debug": "^4.1.1",
		"jest": "^24.5.0",
		"prettier": "^1.16.4",
		"tslint": "^5.14.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.3.4000",
		"util.pkgwrap": "^0.0.107"
	},
	"pkgwrap": {
		"cleanup": [
			"docs/"
		]
	},
	"scripts": {
		"all": "yarn install && yarn build && yarn docs && yarn test && yarn manifest",
		"build": "yarn clean && yarn lint && yarn prettier && yarn build:es && yarn build:umd",
		"build:es": "tsc -p . && minify index.js --out-file index.es.min.js",
		"build:umd": "babel index.js --out-file index.umd.min.js",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"coverage": "pkgwrap --coverage --jest",
		"docs": "pkgwrap --docs",
		"lint": "pkgwrap --lint",
		"manifest": "npm pack --dry-run",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,yaml,yml,css}\"",
		"test": "jest"
	}
}
